<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/lc_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_corner_card"
    android:elevation="4dp"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lc_image"
        tools:src="@mipmap/girl1252995_1280"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lc_right_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lc_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="100dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/link_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="name"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#323538"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/black" />

        <TextView
            android:id="@+id/link_kicker"
            app:layout_constraintTop_toBottomOf="@+id/link_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#928386"
            android:lineSpacingExtra="4sp"
            android:layout_height="wrap_content"
            android:text="kicker" />

        <TextView
            android:id="@+id/link_date"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="Fri, Aug 19"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#b4b4b4"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>